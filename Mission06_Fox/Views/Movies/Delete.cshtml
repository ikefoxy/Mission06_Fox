@model Mission06_Fox.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1 class="mb-4 text-danger">Delete Movie</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this movie?</strong>
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Director</dt>
        <dd class="col-sm-9">@Model.Director</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MovieId" />

    <button type="submit" class="btn btn-danger">
        Yes, Delete
    </button>

    <a asp-action="List" class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>