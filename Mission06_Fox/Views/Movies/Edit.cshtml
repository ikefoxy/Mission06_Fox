@model Mission06_Fox.Models.Movie
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Movie";
}

<h1 class="mb-4">Edit Movie</h1>

<form method="post" class="mb-3">
    <input type="hidden" asp-for="MovieId" />

    <div class="mb-3">
        <label class="form-label">Category (optional)</label>
        <select asp-for="CategoryId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName", Model.CategoryId))">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Edited</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Edited" value="true" @(Model.Edited == true ? "checked" : "") />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Edited" value="false" @(Model.Edited == false ? "checked" : "") />
            <label class="form-check-label">No</label>
        </div>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Copied To Plex</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="CopiedToPlex" value="true" @(Model.CopiedToPlex == true ? "checked" : "") />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="CopiedToPlex" value="false" @(Model.CopiedToPlex == false ? "checked" : "") />
            <label class="form-check-label">No</label>
        </div>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
        <div class="form-text">Max 25 characters.</div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="List" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}