@model List<Mission06_Fox.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h1 class="mb-4">Movie Collection</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Category ID</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Copied To Plex</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.CategoryId</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>
            <td>@(m.Edited == true ? "Yes" : "No")</td>
            <td>@(m.CopiedToPlex == true ? "Yes" : "No")</td>
            <td>
                <a asp-action="Edit"
                   asp-route-id="@m.MovieId"
                   class="btn btn-sm btn-primary me-2">
                    Edit
                </a>

                <a asp-action="Delete"
                   asp-route-id="@m.MovieId"
                   class="btn btn-sm btn-danger">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>